<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS Gateway"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send SMS using your phone's SIM card"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server URL"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/serverUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://your-server-url"
            android:inputType="textUri"
            android:padding="16dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Token"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/deviceTokenInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter device token from server"
            android:inputType="textPassword"
            android:padding="16dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/smsCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS Sent: 0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions:\n\n1. Enter your server URL\n2. Enter device token from server console\n3. Press Connect\n4. Grant SMS permission\n5. Keep app open to send SMS"
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:background="#F5F5F5" />

    </LinearLayout>
</ScrollView>
