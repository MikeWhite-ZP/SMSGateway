modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SMS Server"

[[workflows.workflow]]
name = "SMS Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python sms_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "2", "--threads", "4", "sms_server:app"]
build = ["pip", "install", "-r", "requirements.txt"]
